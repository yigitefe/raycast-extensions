{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hevy",
  "title": "Hevy",
  "description": "Your Hevy workout data at your fingertips via Raycast",
  "icon": "hevy.png",
  "author": "clins1994",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Data",
    "Fun",
    "Productivity"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "Your Hevy API key. Only available for Pro users.",
      "placeholder": "your-api-key"
    }
  ],
  "commands": [
    {
      "name": "search-workouts",
      "title": "Search Workouts",
      "subtitle": "Hevy",
      "description": "View your workouts on a list",
      "mode": "view"
    },
    {
      "name": "search-routines",
      "title": "Search Routines",
      "subtitle": "Hevy",
      "description": "View your routines on a list",
      "mode": "view"
    }
  ],
  "tools": [
    {
      "name": "fetch-workouts",
      "title": "Fetch Workouts",
      "description": "Fetches your workouts"
    },
    {
      "name": "fetch-routines",
      "title": "Fetch Routines",
      "description": "Fetches your routines"
    }
  ],
