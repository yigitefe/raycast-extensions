{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mxroute",
  "title": "MXroute",
  "description": "Email hosting for your domains",
  "icon": "mxroute.png",
  "author": "xmok",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Communication",
    "Developer Tools"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "server",
      "title": "Server",
      "description": "Your MXroute server",
      "type": "dropdown",
      "data": [
        {"title": "arrow.mxrouting.net", "value": "arrow.mxrouting.net"},
        {"title": "blizzard.mxrouting.net", "value": "blizzard.mxrouting.net"},
        {"title": "eagle.mxlogin.com", "value": "eagle.mxlogin.com"},
        {"title": "echo.mxrouting.net", "value": "echo.mxrouting.net"},
        {"title": "everest.mxrouting.net", "value": "everest.mxrouting.net"},
        {"title": "fusion.mxrouting.net", "value": "fusion.mxrouting.net"},
        {"title": "glacier.mxrouting.net", "value": "glacier.mxrouting.net"},
        {"title": "heracles.mxrouting.net", "value": "heracles.mxrouting.net"},
        {"title": "london.mxroute.com", "value": "london.mxroute.com"},
        {"title": "longhorn.mxrouting.net", "value": "longhorn.mxrouting.net"},
        {"title": "lucy.mxrouting.net", "value": "lucy.mxrouting.net"},
        {"title": "monday.mxrouting.net", "value": "monday.mxrouting.net"},
        {"title": "moose.mxrouting.net", "value": "moose.mxrouting.net"},
        {"title": "pixel.mxrouting.net", "value": "pixel.mxrouting.net"},
        {"title": "redbull.mxrouting.net", "value": "redbull.mxrouting.net"},
        {"title": "safari.mxrouting.net", "value": "safari.mxrouting.net"},
        {"title": "shadow.mxrouting.net", "value": "shadow.mxrouting.net"},
        {"title": "sunfire.mxrouting.net", "value": "sunfire.mxrouting.net"},
        {"title": "taylor.mxrouting.net", "value": "taylor.mxrouting.net"},
        {"title": "tuesday.mxrouting.net", "value": "tuesday.mxrouting.net"},
        {"title": "wednesday.mxrouting.net", "value": "wednesday.mxrouting.net"},
        {"title": "witcher.mxrouting.net", "value": "witcher.mxrouting.net"}
      ],
      "required": true
    },
    {
      "name": "username",
      "title": "Username",
      "placeholder": "jarland",
      "description": "Your MXroute username",
      "type": "textfield",
      "required": true
    },
    {
      "name": "api_key",
      "title": "API Key",
      "placeholder": "Mx....",
      "description": "Your MXroute API key",
      "type": "password",
      "required": true
    }
  ],
  "commands": [
    {
      "name": "index",
      "title": "Manage MXroute",
      "description": "Manage your MXroute domains, accounts, forwarders",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.1",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
