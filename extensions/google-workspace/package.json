{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "google-workspace",
  "title": "Google Workspace",
  "description": "Access Google Drive files",
  "icon": "google-logo.png",
  "owner": "raycast",
  "access": "public",
  "author": "thomaslombart",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "contributors": [
    "mathieudutour",
    "marcmagn1",
    "meganpearson",
    "jbjanot",
    "ridemountainpig",
    "ViGeng",
    "xilopaint",
    "faridrashidi"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "displayFilePath",
      "type": "checkbox",
      "required": false,
      "default": false,
      "description": "This may slow down your search results.",
      "label": "Display file path in search results"
    },
    {
      "name": "preferredBrowser",
      "type": "dropdown",
      "required": false,
      "title": "Preferred Browser",
      "description": "Select the browser to open Google Drive files in. Note: Login will always use the default browser.",
      "default": "",
      "data": [
        {
          "title": "Default",
          "value": ""
        },
        {
          "title": "Google Chrome",
          "value": "Google Chrome"
        },
        {
          "title": "Safari",
          "value": "Safari"
        },
        {
          "title": "Firefox",
          "value": "Firefox"
        },
        {
          "title": "Microsoft Edge",
          "value": "Microsoft Edge"
        },
        {
          "title": "Arc",
          "value": "Arc"
        },
        {
          "title": "Brave Browser",
          "value": "Brave Browser"
        }
      ]
    }
  ],
  "commands": [
    {
      "name": "create-google-document",
      "title": "Create Google Document",
      "description": "Create a new Google document",
      "icon": "google-docs.png",
      "mode": "no-view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "create-google-spreadsheet",
      "title": "Create Google Spreadsheet",
      "description": "Create a new Google spreadsheet",
      "icon": "google-sheets.png",
      "mode": "no-view"
    },
    {
      "name": "create-google-presentation",
      "title": "Create Google Presentation",
      "description": "Create a new Google presentation",
      "icon": "google-slides.png",
      "mode": "no-view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "create-google-form",
      "title": "Create Google Form",
      "description": "Create a new Google form",
      "icon": "google-forms.png",
      "mode": "no-view",
      "arguments": [
        {
          "name": "title",
          "placeholder": "Title",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "open-google-drive-home",
      "title": "Open Google Drive Home",
      "description": "Open Google Drive in your default browser",
      "icon": "google-drive.png",
      "mode": "no-view"
    },
    {
      "name": "search-google-drive-files",
      "title": "Search Google Drive",
      "description": "Search files in your Google Drive",
      "icon": "google-drive.png",
      "mode": "view"
    },
    {
      "name": "starred-google-drive-files-menubar",
      "title": "Starred Google Drive Files",
      "description": "List your starred Google Drive files in the Menu Bar",
      "icon": "google-drive.png",
      "mode": "menu-bar",
      "interval": "15m"
    }
  ],
  "tools": [
    {
      "name": "search-files",
      "title": "Search Files",
      "description": "Search files in your Google Drive"
    },
    {
      "name": "create-document",
      "title": "Create Document",
      "description": "Creates a new Google document (docs, forms, spreadsheets, presentation)"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.1",
    "@raycast/utils": "^2.2.2",
    "date-fns": "^4.1.0",
    "friendly-mimes": "^3.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.39.2",
    "prettier": "^3.5.3",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
