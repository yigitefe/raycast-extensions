{
  "name": "hotel-manager",
  "title": "Hotel Manager",
  "description": "Manage Hotel apps",
  "version": "1.0.0",
  "icon": "icon.png",
  "author": "yicone",
  "categories": [
    "Developer Tools",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "List Apps",
      "description": "List and manage Hotel apps",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "mockMode",
      "type": "checkbox",
      "required": false,
      "default": false,
      "label": "Mock Mode",
      "description": "Enable mock data for screenshots"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.0",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
