{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "customer-io",
  "title": "Customer IO",
  "description": "Interact with customer.io via Raycast",
  "icon": "extension-icon.png",
  "author": "NathanThomassin",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "site_id",
      "type": "textfield",
      "required": true,
      "title": "Site ID",
      "description": "Your Customer.io Site ID",
      "placeholder": "Enter your Site ID"
    },
    {
      "name": "workspace_id",
      "type": "textfield",
      "required": true,
      "title": "Workspace ID",
      "description": "Your Customer.io Workspace ID (found in the URL: fly.customer.io/workspaces/{id})",
      "placeholder": "Enter your Workspace ID"
    },
    {
      "name": "app_api_key",
      "type": "password",
      "required": true,
      "title": "App API Key",
      "description": "Your Customer.io App API Key",
      "placeholder": "Enter your App API Key"
    },
    {
      "name": "api_key",
      "type": "password",
      "required": true,
      "title": "API Key",
      "description": "Your Customer.io API Key",
      "placeholder": "Enter your API Key"
    }
  ],
  "commands": [
    {
      "name": "campaign-list",
      "title": "Campaigns",
      "subtitle": "Customer.io",
      "description": "List and manage campaigns",
      "mode": "view"
    },
    {
      "name": "broadcast-list",
      "title": "Broadcasts",
      "subtitle": "Customer.io",
      "description": "List and manage broadcasts",
      "mode": "view"
    },
    {
      "name": "segment-list",
      "title": "Segments",
      "subtitle": "Customer.io",
      "description": "List and explore segments",
      "mode": "view"
    },
    {
      "name": "customer-search",
      "title": "Search Customers",
      "subtitle": "Customer.io",
      "description": "Search customers by email",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.10",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}